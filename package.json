{
  "name": "watch-wishlist-sale",
  "version": "1.0.0",
  "description": "Check your Steam wishlist and notify you via Discord of the price, discount rate, and the lowest price in SteamDB.",
  "homepage": "https://github.com/tomacheese/watch-wishlist-sale",
  "bugs": {
    "url": "https://github.com/tomacheese/watch-wishlist-sale/issues"
  },
  "license": "MIT",
  "author": "Tomachi",
  "private": true,
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:tomacheese/watch-wishlist-sale.git"
  },
  "scripts": {
    "generate-schema": "typescript-json-schema --required tsconfig.json Configuration -o schema/Configuration.json",
    "lint:prettier": "prettier --check src",
    "lint:eslint": "eslint . -c eslint.config.mjs",
    "lint:tsc": "tsc",
    "fix:eslint": "eslint . -c eslint.config.mjs --fix",
    "fix:prettier": "prettier --write src",
    "preinstall": "npx only-allow pnpm",
    "start": "tsx ./src/main.ts",
    "dev": "tsx watch ./src/main.ts",
    "lint": "run-z lint:prettier,lint:eslint,lint:tsc",
    "fix": "run-z fix:prettier,fix:eslint"
  },
  "devDependencies": {
    "@book000/eslint-config": "1.7.150",
    "@book000/node-utils": "1.14.15",
    "@types/node": "22.13.9",
    "axios": "1.8.1",
    "eslint": "9.21.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-n": "17.16.2",
    "eslint-plugin-promise": "7.2.1",
    "prettier": "3.5.3",
    "puppeteer-core": "24.4.0",
    "run-z": "2.1.0",
    "tsx": "4.19.3",
    "typescript": "5.8.2",
    "typescript-json-schema": "0.65.1"
  },
  "packageManager": "pnpm@10.6.0+sha512.df0136e797db0cfa7ec1084e77f3bdf81bacbae9066832fbf95cba4c2140ad05e64f316cde51ce3f99ea00a91ffc702d6aedd3c0f450f895e3e7c052fe573cd8",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
